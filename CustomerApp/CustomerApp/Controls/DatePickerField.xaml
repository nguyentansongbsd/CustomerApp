<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
      xmlns:controls="clr-namespace:CustomerApp.Controls"
      x:Class="CustomerApp.Controls.DatePickerField"
      ColumnDefinitions="Auto,*"
      RowDefinitions="Auto,Auto"
      RowSpacing="-1">
    <Label x:Name="title" Text="{Binding Title}" Grid.Column="0" Grid.Row="0" FontSize="15" TextColor="{StaticResource TextColor}"/>
    <Label x:Name="required" Text="*" IsVisible="{Binding isRequired}" Grid.Column="1" Grid.Row="0" FontSize="18" TextColor="Red" Padding="-2,0,0,0"/>
    <controls:DatePickerBoderControl x:Name="datepicker" Date="{Binding Date}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"/>
</Grid>