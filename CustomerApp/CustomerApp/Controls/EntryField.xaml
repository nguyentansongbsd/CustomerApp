<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
      xmlns:controls="clr-namespace:CustomerApp.Controls" xmlns:telerikPrimitives="clr-namespace:Telerik.XamarinForms.Primitives;assembly=Telerik.XamarinForms.Primitives"
      x:Class="CustomerApp.Controls.EntryField"
      ColumnDefinitions="Auto,*"
      RowDefinitions="Auto,Auto"
      RowSpacing="-1">
    <Label x:Name="title" Text="{Binding Title}" Grid.Column="0" Grid.Row="0" FontSize="15" TextColor="{StaticResource TextColor}"/>
    <Label x:Name="required" Text="*" IsVisible="{Binding isRequired}" Grid.Column="1" Grid.Row="0" FontSize="18" TextColor="Red" Padding="-2,0,0,0"/>
    <controls:MainEntry x:Name="entry" Text="{Binding Text}" Placeholder="{Binding Placeholder}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" FontSize="15" TextColor="{StaticResource TextColor}"/>
    <telerikPrimitives:RadBorder IsVisible="{Binding isEnabledField}" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" BorderColor="{StaticResource EnableColor}" CornerRadius="5" BorderThickness="1" HeightRequest="40" BackgroundColor="{StaticResource EnableColor}">
        <Label Text="{Binding Text}" TextColor="{StaticResource TextColor}" FontSize="15" VerticalOptions="Center" Padding="5,0,5,0" LineBreakMode="TailTruncation"/>
    </telerikPrimitives:RadBorder>
</Grid>